{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "name": "data",
    "url": "https://eibanez.github.io/wordle/score-by-player.json"
  },
  "transform": [{
    "filter": {"field": "streak_id", "valid": true}
  }, {
    "aggregate": [{"op": "count", "as": "streak_duration"}], "groupby": ["name", "streak_id"]
  }],
  "encoding": {
      "x": {"field": "streak_duration", "type": "quantitative", "title": "Streak duration"},
      "y": {"field": "name", "type": "nominal", "title": null, "scale": {"domain": ["Jessica", "Brian", "Eduardo"], "paddingInner": 0}},
      "yOffset": {"field": "streak_id", "type": "nominal"}
  },
  "layer": [
    {
      "mark": {"type": "bar"},
      "encoding": {
         "color": {"field": "name", "type": "nominal", "title": null, "scale": {"domain": ["Jessica", "Brian", "Eduardo"]}, "legend": null}
      },
    },
    {
      "mark": {
        "type": "text",
        "align": {"expr": "datum.streak_duration <= 5 ? 'left' : 'right'"},
        "xOffset": {"expr": "datum.streak_duration < 5 ? 5 :-5"},
        "color": {"expr": "datum.streak_duration <= 5 ? 'black' : 'white'"}
      },
      "encoding": {
         "text": {"field": "streak_duration", "type": "quantitative", "title": null}
      }
    }
  ],
  "width": 300,
  "height": 350
}
