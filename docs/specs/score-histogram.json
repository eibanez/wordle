{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "name": "data",
    "url": "https://eibanez.github.io/wordle/score-by-player.json"
  },
  "encoding": {
    "x": {"field": "score", "type": "quantitative", "title": null, "aggregate": "count"},
    "y": {"field": "score", "type": "nominal", "title": null, "scale": {"domain": [1, 2, 3, 4, 5, 6, "X"]}},
    "yOffset": {"field": "name", "type": "nominal", "title": null, "scale": {"domain": ["Jessica", "Brian", "Eduardo"]}}
  },
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "color": {"field": "name", "type": "nominal", "title": null, "scale": {"domain": ["Jessica", "Brian", "Eduardo"]}}
      }
    },
    {
      "mark": {"type": "text", "align": "right", "xOffset": -5, "color": "white"},
      "encoding": {
        "text": {"field": "score", "type": "quantitative", "title": null, "aggregate": "count"}
      }
    }
  ],
  "width": "container",
  "height": 500
}
